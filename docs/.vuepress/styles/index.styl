@import url('https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Open+Sans:wght@400;700&display=swap');

// GENERAL
body
  font-family $secondaryFont

h1, h2, h3, h4, h5, h6
  font-family $primaryFont !important
  font-weight bold

.callout
  margin 1rem 0
  padding 0.1rem 1.5rem
  border-radius 0.4rem
  background-color #255b9f09

  .title
    font-weight bold

pre.tree
  border-left-width 0.5rem
  border-left-style solid
  border-color $accentColor !important
  border-radius 0

  & > code
    font-size 14px !important

    & > p
      margin -5px 0 -20px 0

    code
      background-color $accentColor !important
      color #ffffff

      padding 3px 5px
      border-radius 3px

    em
      color #808080
      font-weight light

.hero
  img
    width 240px
    height auto

  h1
    border none
    padding-bottom 0

#search-form
  line-height inherit

.sidebar-links a.sidebar-link:hover
  background-color #e6ecf1 !important

// SCROLLBAR
@media (min-width: 719px)
  ::-webkit-scrollbar
    max-width 6px
    max-height 12px
  ::-webkit-scrollbar-thumb
    background-color rgba(255, 255, 255, 0.4)
    border-radius 6px

// 添加项目表格的全局样式

// 项目表格固定布局
.project-table-container {
  width: 100%;
  margin-bottom: 20px;
  page-break-inside: avoid;
}

// 确保表格列宽固定
.project-table-container table {
  width: 100%;
  table-layout: fixed !important;
  border-collapse: collapse;
}

// 单元格样式
.project-table-container th,
.project-table-container td {
  padding: 10px;
  border: 1px solid #ddd;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

// 表头样式
.project-table-container th {
  background-color: #f2f2f2;
  font-weight: bold;
}

// 设置各列宽度
.project-table-container th:nth-child(1),
.project-table-container td:nth-child(1) {
  width: 10%; // 编号列
  text-align: center;
}

.project-table-container th:nth-child(2),
.project-table-container td:nth-child(2) {
  width: 15%; // 框架列
}

.project-table-container th:nth-child(3),
.project-table-container td:nth-child(3) {
  width: 55%; // 题目列 - 最宽，因为内容通常最长
}

.project-table-container th:nth-child(4),
.project-table-container td:nth-child(4) {
  width: 20%; // 文档列
}

// 隔行变色
.project-table-container tr:nth-child(even) {
  background-color: #f9f9f9;
}

// 打印样式
@media print {
  .project-table-container {
    page-break-inside: auto;
  }
  
  .project-table-container tr {
    page-break-inside: avoid;
    page-break-after: auto;
  }
  
  .project-table-container th,
  .project-table-container td {
    page-break-inside: avoid;
  }
}